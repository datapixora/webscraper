{
  "name": "webscraper-dev-runner",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "node ./scripts/dev.mjs",
    "dev:up": "docker compose up -d db redis api",
    "dev:logs": "docker compose logs -f api",
    "dev:down": "docker compose down",
    "dev:frontend": "npm run dev --prefix frontend -- --hostname 0.0.0.0 --port 3002",
    "postinstall": "npm install --prefix frontend"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
