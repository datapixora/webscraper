# ==================================
# WEBSCRAPER PLATFORM - ENVIRONMENT VARIABLES
# ==================================
# Copy this file to .env for local development. Docker Desktop + Compose
# will read these values automatically.

# Environment
ENVIRONMENT=development

# Database (PostgreSQL)
POSTGRES_USER=webscraper
POSTGRES_PASSWORD=webscraper_dev_password
POSTGRES_DB=webscraper_db
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://webscraper:webscraper_dev_password@db:5432/webscraper_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# Backend (FastAPI)
BACKEND_PORT=8000
SECRET_KEY=dev-secret-key-change-in-production
CORS_ORIGINS=["http://localhost:3000","http://localhost:3002","http://localhost:8000"]
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Frontend (Next.js)
FRONTEND_PORT=3002
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=WebScraper Platform
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXTAUTH_URL=http://localhost:3002
NEXTAUTH_SECRET=change-me-for-auth

# Celery / Task Queue
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_TIME_LIMIT=3600

# Scraping
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
DEFAULT_TIMEOUT=30

# SmartProxy (optional)
SMARTPROXY_ENABLED=false
SMARTPROXY_HOST=
SMARTPROXY_PORT=7000
SMARTPROXY_USERNAME=
SMARTPROXY_PASSWORD=
SMARTPROXY_COUNTRY=

# Logging
LOG_LEVEL=INFO

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
